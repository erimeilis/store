// Store Database Schema with Prisma ORM
// Multi-environment support: SQLite (local), Cloudflare D1 (preview/production)
// Features: Dynamic table management, IP/domain whitelist, Google OAuth

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Users - Google OAuth + table ownership management
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  picture   String? // Profile picture from Google
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  // Relationships
  sessions Session[]
  tables   Table[]

  @@map("users")
}

// Sessions - Simple post-OAuth session management
model Session {
  id           String   @id @default(cuid())
  userId       String   @map("userId")
  sessionToken String   @unique @map("sessionToken")
  expiresAt    DateTime @map("expiresAt")
  createdAt    DateTime @default(now()) @map("createdAt")
  updatedAt    DateTime @updatedAt @map("updatedAt")

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Tokens - API authentication with IP/domain whitelist
model Token {
  id             String    @id @default(cuid())
  token          String    @unique
  name           String
  permissions    String    @default("read") // comma-separated: read,write,delete,admin
  allowedIps     String?   @map("allowedIps") // JSON array of IPs/CIDR ranges
  allowedDomains String?   @map("allowedDomains") // JSON array of domain patterns
  expiresAt      DateTime? @map("expiresAt")
  createdAt      DateTime  @default(now()) @map("createdAt")
  updatedAt      DateTime  @updatedAt @map("updatedAt")

  @@map("tokens")
}

// Tables - Metadata for user-created custom tables
model Table {
  id          String   @id @default(cuid())
  name        String
  ownerId     String   @map("ownerId")
  schema      String // JSON - column definitions, types, constraints
  permissions String? // JSON - user permissions per table
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  // Relationships
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  // Unique table names per user
  @@unique([name, ownerId])
  @@map("tables")
}

// AllowedEmails - Access control whitelist
model AllowedEmail {
  id        String   @id @default(cuid())
  email     String? // Specific email address
  domain    String? // Domain pattern (e.g., @company.com)
  type      String // "email" or "domain"
  createdAt DateTime @default(now()) @map("createdAt")

  @@map("allowedEmails")
}

// Items - Test table for root user (example with 100 fake records)
model Item {
  id          String   @id @default(cuid())
  name        String
  description String?
  data        String // JSON - price, category, stock, etc.
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  @@map("items")
}

// Sales - Records sales from "for sale" tables with complete audit trail
model Sale {
  id            String   @id @default(cuid())
  saleNumber    String   @unique @map("saleNumber")
  tableId       String   @map("tableId")
  tableName     String   @map("tableName")
  itemId        String   @map("itemId")
  itemSnapshot  String   @map("itemSnapshot") // JSON
  customerId    String   @map("customerId")
  quantitySold  Int      @default(1) @map("quantitySold")
  unitPrice     Float    @map("unitPrice")
  totalAmount   Float    @map("totalAmount")
  saleStatus    String   @default("completed") @map("saleStatus")
  paymentMethod String?  @map("paymentMethod")
  notes         String?
  createdAt     DateTime @default(now()) @map("createdAt")
  updatedAt     DateTime @updatedAt @map("updatedAt")

  @@map("sales")
}

// InventoryTransaction - Tracks all changes to "for sale" table items
model InventoryTransaction {
  id              String   @id @default(cuid())
  tableId         String   @map("tableId")
  tableName       String   @map("tableName")
  itemId          String   @map("itemId")
  transactionType String   @map("transactionType")
  quantityChange  Int?     @map("quantityChange")
  previousData    String?  @map("previousData") // JSON
  newData         String?  @map("newData") // JSON
  referenceId     String?  @map("referenceId")
  createdBy       String   @map("createdBy")
  createdAt       DateTime @default(now()) @map("createdAt")

  @@map("inventoryTransactions")
}

// UserTable - Metadata for user-created dynamic tables
model UserTable {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdBy   String
  userId      String? // Optional user ID for session-based creation
  isPublic    Boolean  @default(false)
  forSale     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  columns TableColumn[]
  data    TableData[]

  @@map("userTables")
}

// TableColumn - Column definitions for user tables
model TableColumn {
  id              String   @id @default(cuid())
  tableId         String
  name            String
  type            String
  isRequired      Boolean  @default(false)
  allowDuplicates Boolean  @default(true)
  defaultValue    String?
  position        Int
  createdAt       DateTime @default(now())

  // Relationships
  table UserTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@unique([tableId, name])
  @@unique([tableId, position])
  @@map("tableColumns")
}

// TableData - Dynamic table data storage (JSON)
model TableData {
  id        String   @id @default(cuid())
  tableId   String
  data      String // JSON blob with column data
  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  table UserTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@map("tableData")
}
