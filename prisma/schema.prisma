// Store Database Schema with Prisma ORM
// Multi-environment support: SQLite (local), Cloudflare D1 (preview/production)
// Features: Dynamic table management, IP/domain whitelist, Google OAuth

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Users - Google OAuth + table ownership management
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  picture   String? // Profile picture from Google
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  // Relationships
  sessions Session[]
  tables   Table[]

  @@map("users")
}

// Sessions - Simple post-OAuth session management
model Session {
  id           String   @id @default(cuid())
  userId       String   @map("userId")
  sessionToken String   @unique @map("sessionToken")
  expiresAt    DateTime @map("expiresAt")
  createdAt    DateTime @default(now()) @map("createdAt")
  updatedAt    DateTime @updatedAt @map("updatedAt")

  // Relationships
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Tokens - API authentication with IP/domain whitelist and table access control
// isAdmin: true = admin/frontend tokens (all routes), false = regular API tokens (public routes only)
model Token {
  id             String    @id @default(cuid())
  token          String    @unique
  name           String
  permissions    String    @default("read") // comma-separated: read,write,delete,admin
  isAdmin        Boolean   @default(false) @map("isAdmin") // Admin tokens can access all routes
  allowedIps     String?   @map("allowedIps") // JSON array of IPs/CIDR ranges
  allowedDomains String?   @map("allowedDomains") // JSON array of domain patterns
  tableAccess    String?   @map("tableAccess") // JSON array of accessible table IDs
  expiresAt      DateTime? @map("expiresAt")
  createdAt      DateTime  @default(now()) @map("createdAt")
  updatedAt      DateTime  @updatedAt @map("updatedAt")

  @@map("tokens")
}

// Tables - Metadata for user-created custom tables
model Table {
  id          String   @id @default(cuid())
  name        String
  ownerId     String   @map("ownerId")
  schema      String // JSON - column definitions, types, constraints
  permissions String? // JSON - user permissions per table
  createdAt   DateTime @default(now()) @map("createdAt")
  updatedAt   DateTime @updatedAt @map("updatedAt")

  // Relationships
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  // Unique table names per user
  @@unique([name, ownerId])
  @@map("tables")
}

// AllowedEmails - Access control whitelist
model AllowedEmail {
  id        String   @id @default(cuid())
  email     String? // Specific email address
  domain    String? // Domain pattern (e.g., @company.com)
  type      String // "email" or "domain"
  createdAt DateTime @default(now()) @map("createdAt")

  @@map("allowedEmails")
}

// Sales - Records sales from "sale" type tables with complete audit trail
model Sale {
  id            String   @id @default(cuid())
  saleNumber    String   @unique @map("saleNumber")
  tableId       String   @map("tableId")
  tableName     String   @map("tableName")
  itemId        String   @map("itemId")
  itemSnapshot  String   @map("itemSnapshot") // JSON
  customerId    String   @map("customerId")
  quantitySold  Int      @default(1) @map("quantitySold")
  unitPrice     Float    @map("unitPrice")
  totalAmount   Float    @map("totalAmount")
  saleStatus    String   @default("completed") @map("saleStatus")
  paymentMethod String?  @map("paymentMethod")
  notes         String?
  createdAt     DateTime @default(now()) @map("createdAt")
  updatedAt     DateTime @updatedAt @map("updatedAt")

  @@map("sales")
}

// InventoryTransaction - Tracks all changes to "sale" type table items
model InventoryTransaction {
  id              String   @id @default(cuid())
  tableId         String   @map("tableId")
  tableName       String   @map("tableName")
  itemId          String   @map("itemId")
  transactionType String   @map("transactionType")
  quantityChange  Int?     @map("quantityChange")
  previousData    String?  @map("previousData") // JSON
  newData         String?  @map("newData") // JSON
  referenceId     String?  @map("referenceId")
  createdBy       String   @map("createdBy")
  createdAt       DateTime @default(now()) @map("createdAt")

  @@map("inventoryTransactions")
}

// Rental - Records rentals from "rent" type tables with rental lifecycle tracking
model Rental {
  id           String    @id @default(cuid())
  rentalNumber String    @unique @map("rentalNumber")
  tableId      String    @map("tableId")
  tableName    String    @map("tableName")
  itemId       String    @map("itemId")
  itemSnapshot String    @map("itemSnapshot") // JSON
  customerId   String    @map("customerId")
  unitPrice    Float     @map("unitPrice")
  rentalStatus String    @default("active") @map("rentalStatus") // 'active' | 'released' | 'cancelled'
  rentedAt     DateTime  @default(now()) @map("rentedAt")
  releasedAt   DateTime? @map("releasedAt")
  notes        String?
  createdAt    DateTime  @default(now()) @map("createdAt")
  updatedAt    DateTime  @updatedAt @map("updatedAt")

  @@map("rentals")
}

// UserTable - Metadata for user-created dynamic tables
// tableType: 'default' (regular), 'sale' (e-commerce with price/qty), 'rent' (rental with price/fee/used/available)
model UserTable {
  id              String   @id @default(cuid())
  name            String
  description     String?
  createdBy       String
  userId          String? // Optional user ID for session-based creation
  visibility      String   @default("private") // 'private' | 'public' | 'shared'
  tableType       String   @default("default") // 'default' | 'sale' | 'rent'
  productIdColumn String?  @map("productIdColumn") // Column name that serves as product identifier/title
  rentalPeriod    String?  @default("month") @map("rentalPeriod") // Billing period for rent tables: hour, day, week, month, year
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relationships
  columns TableColumn[]
  data    TableData[]

  @@map("userTables")
}

// TableColumn - Column definitions for user tables
model TableColumn {
  id              String   @id @default(cuid())
  tableId         String
  name            String
  type            String
  isRequired      Boolean  @default(false)
  allowDuplicates Boolean  @default(true)
  defaultValue    String?
  position        Int
  createdAt       DateTime @default(now())

  // Relationships
  table UserTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@unique([tableId, name])
  @@map("tableColumns")
}

// TableData - Dynamic table data storage (JSON)
model TableData {
  id        String   @id @default(cuid())
  tableId   String
  data      String // JSON blob with column data
  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  table UserTable @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@map("tableData")
}
