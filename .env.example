# Store - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains secrets!

# =============================================================================
# CLOUDFLARE ACCOUNT
# =============================================================================
CLOUDFLARE_ACCOUNT_ID=

# =============================================================================
# DOMAINS (your custom domains or workers.dev subdomains)
# =============================================================================
API_DOMAIN=your-api.your-subdomain.workers.dev
FRONTEND_DOMAIN=your-frontend.your-subdomain.workers.dev

# =============================================================================
# DATABASE (D1)
# =============================================================================
# Production D1 database
D1_DATABASE_NAME=store-database
D1_DATABASE_ID=

# Preview/Local D1 database (for development)
D1_PREVIEW_DATABASE_NAME=store-database-preview
D1_PREVIEW_DATABASE_ID=

# =============================================================================
# OBJECT STORAGE (R2)
# =============================================================================
R2_BUCKET_NAME=store-uploads
R2_PREVIEW_BUCKET_NAME=store-uploads-preview

# =============================================================================
# KV NAMESPACES
# =============================================================================
# Production KV namespace (shared by backend and frontend)
KV_NAMESPACE_ID=

# Preview KV namespace (for development)
KV_PREVIEW_NAMESPACE_ID=

# Frontend-specific KV (for dev environment)
KV_FRONTEND_DEV_ID=

# =============================================================================
# SECRETS (used for .dev.vars generation)
# =============================================================================
# Google OAuth credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# API tokens are managed by token-manager (./scripts/tokens/)
# Run: npm run db:reset:<env> to generate tokens
# Tokens are automatically uploaded during deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Items per page in list views
PAGE_SIZE=20
PAGE_SIZE_PREVIEW=10
PAGE_SIZE_LOCAL=5
