{
  "name": "store-crud-frontend",
  "version": "1.0.0",
  "description": "Store CRUD Frontend built with Hono and React",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "echo \"export default false\" > ./src/config/is_prod.ts && npm run build:css && npm run build:client && wrangler dev --env dev --port 5173",
    "dev:preview": "echo \"export default false\" > ./src/config/is_prod.ts && npm run build:css && npm run build:client && wrangler dev --env preview --port 5173",
    "build": "npm run version && npm run build:css && npm run build:client && wrangler deploy",
    "deploy": "npm run build",
    "version": "echo \"export default `date +'%s'`\" > ./src/config/build_time.ts && echo \"export default true\" > ./src/config/is_prod.ts",
    "build:css": "postcss src/styles/globals.css -o dist/styles.css && cp src/styles/swagger-ui.css dist/swagger-ui.css",
    "build:css:watch": "postcss src/styles/globals.css -o dist/styles.css --watch",
    "build:client": "node esbuild.config.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@hono/react-renderer": "^0.3.0",
    "@hono/zod-validator": "^0.7.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/postcss": "^4.1.13",
    "better-auth": "1.2.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "hono": "^4.9.4",
    "idb-keyval": "^6.2.1",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.53",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.5.3",
    "wrangler": "^4.38.0"
  }
}
