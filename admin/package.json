{
  "name": "store-frontend",
  "version": "3.0.1",
  "description": "Store dashboard - React SSR on Cloudflare Workers",
  "private": true,
  "type": "module",
  "scripts": {
    "config:generate": "node ../scripts/generate-config.js frontend",
    "config:generate:dev": "node ../scripts/generate-config.js frontend --dev",
    "config:generate:dev:preview": "node ../scripts/generate-config.js frontend --dev --preview",
    "dev": "npm run config:generate:dev && echo \"export default false\" > ./src/config/is_prod.ts && npm run build:css && npm run build:client && wrangler dev --env local --port 5173",
    "dev:preview": "npm run config:generate:dev:preview && echo \"export default false\" > ./src/config/is_prod.ts && npm run build:css && npm run build:client && wrangler dev --env preview --remote --port 5173",
    "build": "npm run config:generate && npm run version && npm run build:css && npm run build:client && wrangler deploy",
    "deploy": "npm run build",
    "version": "echo \"export default `date +'%s'`\" > ./src/config/build_time.ts && echo \"export default true\" > ./src/config/is_prod.ts",
    "build:css": "postcss src/styles/globals.css -o dist/styles.css && cp src/styles/swagger-ui.css dist/swagger-ui.css",
    "build:css:watch": "postcss src/styles/globals.css -o dist/styles.css --watch",
    "build:client": "node esbuild.config.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@hono/react-renderer": "^1.0.1",
    "@hono/zod-validator": "^0.7.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/postcss": "^4.1.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "hono": "^4.10.6",
    "idb-keyval": "^6.2.1",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251117.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/browser": "^4.0.10",
    "@vitest/coverage-v8": "^4.0.10",
    "autoprefixer": "^10.4.22",
    "daisyui": "^5.5.5",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "wrangler": "^4.51.0"
  }
}
