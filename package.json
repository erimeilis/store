{
  "name": "store-crud-api",
  "version": "1.0.0",
  "description": "Store CRUD API built with Hono and Cloudflare infrastructure",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --env dev",
    "dev:remote": "wrangler dev --env dev --x-remote-bindings",
    "dev:fullstack": "node dev-full-stack.js",
    "dev:fullstack:remote": "node dev-full-stack-remote.js",
    "deploy": "wrangler deploy",
    "deploy:backend": "wrangler deploy",
    "deploy:frontend": "cd frontend && npm run deploy",
    "deploy:fullstack": "npm run deploy:backend && npm run deploy:frontend",
    "test": "vitest",
    "test:run": "vitest run",
    "build": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:seed:dev": "wrangler d1 execute store-database-preview --env dev --file=scripts/seed-d1.sql",
    "db:seed:prod": "wrangler d1 execute store-database --env production --remote --file=scripts/seed-d1.sql",
    "db:seed:all": "npm run db:seed && npm run db:seed:dev && npm run db:seed:prod",
    "db:migrate:dev": "wrangler d1 execute store-database-preview --env dev --file=prisma/migrations/20250829165615_init/migration.sql",
    "db:migrate:prod": "wrangler d1 execute store-database --env production --remote --file=prisma/migrations/20250829165615_init/migration.sql",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset"
  },
  "keywords": [
    "hono",
    "cloudflare",
    "crud",
    "api",
    "typescript"
  ],
  "author": "Eri <eri@redshoes.pro>",
  "license": "MIT",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "@prisma/adapter-d1": "^6.15.0",
    "@prisma/client": "^6.15.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "better-auth": "^1.3.7",
    "hono": "^4.9.4",
    "prisma": "^6.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
