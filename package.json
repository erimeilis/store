{
  "name": "store-crud-api",
  "version": "1.0.0",
  "description": "Store CRUD API built with Hono and Cloudflare infrastructure",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev:local": "wrangler dev --env local",
    "dev:preview": "wrangler dev --env preview --x-remote-bindings",
    "dev:fullstack:local": "node scripts/dev-fullstack.js local",
    "dev:fullstack:preview": "node scripts/dev-fullstack.js preview",
    "deploy": "wrangler deploy",
    "deploy:frontend": "cd frontend && npm run deploy",
    "deploy:fullstack": "npm run deploy && npm run deploy:frontend",
    "test": "vitest",
    "test:run": "vitest run",
    "build": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:reset:local": "npx tsx scripts/db-reset.ts local",
    "db:reset:preview": "npx tsx scripts/db-reset.ts preview",
    "db:reset:production": "npx tsx scripts/db-reset.ts production",
    "db:seed:generate": "npx tsx seeds/faker-items-generator.ts"
  },
  "keywords": [
    "hono",
    "cloudflare",
    "crud",
    "api",
    "typescript"
  ],
  "author": "Eri <eri@redshoes.pro>",
  "license": "MIT",
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@iarna/toml": "^2.2.5",
    "@prisma/adapter-d1": "^6.15.0",
    "@prisma/client": "^6.15.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "better-auth": "^1.3.7",
    "country-data-list": "^1.5.5",
    "hono": "^4.9.4",
    "playwright": "^1.55.0",
    "prisma": "^6.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "toml": "^3.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^24.3.0",
    "@types/three": "^0.180.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.35.0"
  }
}
