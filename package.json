{
  "name": "store-crud-api",
  "version": "1.0.0",
  "description": "Store CRUD API built with Hono and Cloudflare infrastructure",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:fullstack": "node dev-full-stack.js",
    "dev:backend": "wrangler dev --port 8787",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:run": "vitest run",
    "build": "tsc --noEmit"
