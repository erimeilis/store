{
  "name": "store-api",
  "version": "2.2.0",
  "description": "Serverless inventory management platform on Cloudflare's edge",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "config:generate": "node scripts/generate-config.js",
    "config:generate:dev": "node scripts/generate-config.js --dev",
    "config:generate:backend": "node scripts/generate-config.js backend",
    "config:generate:frontend": "node scripts/generate-config.js frontend",
    "scan:modules": "npx tsx scripts/scan-modules.ts",
    "dev:local": "npm run scan:modules && node scripts/generate-config.js backend --dev && wrangler dev --env local --var APP_VERSION:$(node scripts/get-version.js)",
    "dev:preview": "npm run scan:modules && node scripts/generate-config.js backend --dev && wrangler dev --env preview --x-remote-bindings --var APP_VERSION:$(node scripts/get-version.js)",
    "dev:fullstack:local": "npm run scan:modules && node scripts/generate-config.js --dev && node scripts/dev-fullstack.js local",
    "dev:fullstack:preview": "npm run scan:modules && node scripts/generate-config.js --dev && node scripts/dev-fullstack.js preview",
    "deploy": "node scripts/deploy.js backend",
    "deploy:frontend": "node scripts/deploy.js frontend",
    "deploy:fullstack": "node scripts/deploy.js",
    "deploy:dry-run": "node scripts/deploy.js --dry-run",
    "version:bump": "node scripts/bump-version.js",
    "test": "vitest",
    "test:run": "vitest run",
    "build": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:reset:local": "npx tsx scripts/db-reset.ts local",
    "db:reset:preview": "npx tsx scripts/db-reset.ts preview",
    "db:reset:production": "npx tsx scripts/db-reset.ts production",
    "db:seed:generate": "npx tsx seeds/faker-items-generator.ts"
  },
  "keywords": [
    "hono",
    "cloudflare",
    "inventory",
    "serverless",
    "api",
    "typescript",
    "edge"
  ],
  "author": "Eri <eri@redshoes.pro>",
  "license": "MIT",
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@iarna/toml": "^2.2.5",
    "@prisma/adapter-d1": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "country-data-list": "^1.5.5",
    "hono": "^4.10.6",
    "libphonenumber-js": "^1.12.31",
    "playwright": "^1.55.0",
    "prisma": "^6.19.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "toml": "^3.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251117.0",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^24.10.1",
    "@types/three": "^0.181.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.51.0"
  }
}
