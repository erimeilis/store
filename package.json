  "keywords": [
    "hono",
    "cloudflare",
    "crud",
    "api",
    "typescript"
  ],
  "author": "Eri <eri@redshoes.pro>",
  "license": "MIT",
  "dependencies": {
    "better-auth": "^1.3.7",
    "hono": "^4.9.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
